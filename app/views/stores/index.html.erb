<body id="index">
  <header>
    <div class="home-main">
      <div class="home-wrapper">
        <div class="top-message">
          <h2>自分に合う古着を見つけよう</h2>
          <h1>ふるぎめぐり</h1>
        </div>
      </div>
    </div>
  </header>
  <div class="box1">
    <div class="catchphrase">まずは気になるお店を探してみよう</div>
      <%= render 'search_form' %>
    </div>
    <div class="box2">
      <p class="search-area">エリアから探す</p>
      <span class="tokyo">東京都内</span>
      <span class="store-all">全<%= @store_all.count %>件</span><p></br></p>
      <% @areas.each do |area| %>
        <%= link_to(search_path(@q, 'q[area_name_cont]': area.name)) do %>
          <span class="box-link"><%= area.name %>:<%= area.store.count %>件</span>
        <% end %>
      <% end %>
    </div> 
  </div>
</body>