<%= provide(:title, '店舗詳細') %>
<div class="store-deta"> 
  <div class="store-details">
    <h1 class="store-details-name"><%= @store.name %></h1>
  <span class="store-favorite">
  <% if user_signed_in? %>
    <% if @store.favorite_by?(current_user) %>
      <span><%= link_to "解除", store_favorite_path(@store.id), method: :delete, class: "favorite" %></span>
    <% else %>
      <span><%= link_to "登録", store_favorites_path(@store.id), method: :post, class: "favorite" %></span>
    <% end %>
    <% else %>
    <span><%= link_to "登録", new_user_session_path, class: "favorite" %></span>
  <% end %>
</span>
  </div>
  <div class="store-details-address">住所：<%= @store.address %></div>
  <div>エリア：<%= @area.name %></div>
  <div class="store-boxes">
    <ul class="store-description">
      <li class="store-box"><%= link_to '店舗情報', store_path(@store.id) %></li>
      <li class="store-box"><%= link_to 'クチコミ', store_woms_path(@store.id) %></li>
      <li class="store-box"><%= link_to '購入予定の古着', '#' %></li>
      <% if user_signed_in? %>
        <li class="store-box"><%= link_to 'お気に入り', user_favorites_path(current_user.id) %></li>
      <% else %>
        <li class="store-box"><%= link_to 'お気に入り', new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
  <div class="store-about">
    <div><%= image_tag(@image.thumb.url, class: 'store-image-details') %></div>
    <div class="store-details-outline">
      <span>店舗について</span>
      <p class="store-outline2"><%= @store.outline %></p>
    </div>
  </div>
</div>
