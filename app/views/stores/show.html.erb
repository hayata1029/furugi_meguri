<%= provide(:title, '店舗詳細') %>
<div class="store-deta">
  
  <div class="store-details">
    <h1 class="store-details-name"><%= @store.name %></h1>
    <div class="favorite-store">
      <% if user_signed_in? %>
        <% if @store.favorite_by?(current_user) %>
          <p><%= link_to "お気に入りの解除", store_favorites_path(@store.id), method: :delete, class: "favorite" %></p>
        <% else %>
          <p><%= link_to "お気に入りの登録", store_favorites_path(@store.id), method: :post, class: "favorite" %></p>
        <% end %>
      <% else %>
        <p><span>お気に入り数: </span><%= @store.favorites.count %></p>
      <% end %>
    </div>
  </div>
  <div class="store-details-address">住所：<%= @store.address %></div>
  <div>エリア：<%= @area.name %></div>
  <div class="store-boxes">
    <ul class="store-description">
      <li class="store-box"><%= link_to '店舗情報', store_path(@store.id) %></li>
      <li class="store-box"><%= link_to 'クチコミ', store_woms_path(@store.id) %></li>
      <li class="store-box"><%= link_to '取扱商品', '#' %></li>
      <li class="store-box"><%= link_to 'マイページ', '#' %></li>
    </ul>
  </div>
  </div>
  <div class="store-page">
    <div><%= image_tag(@image.thumb.url, class: 'store-image-details') %></div>
    <div class="store-details-outline"><p>店舗について</p><%= @store.outline %></div>
  </div>
</div>
