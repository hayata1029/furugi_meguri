<div class="search-form">
  <%= search_form_for(@search, url: search_path) do |f| %>
    <%= f.label :name_or_address, "店舗の検索", class: "search-form" %>
    <%= f.search_field :name_or_address_cont, placeholder: '例) 店舗名か住所を入力してください', class: 'search_field' %>
    <%= f.submit ("検索") , class: 'search-btn' %>
  <% end %>
</div>
