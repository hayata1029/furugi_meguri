<%= provide(:title, 'クチコミ') %>
<div class="store-deta">
  <div class="store-details">
    <h1 class="store-details-name"><%= @store.name %></h1>
    </div>
    <div class="store-details-address">住所：<%= @store.address %></div>
    <div>エリア：<%= @area.name %></div>
    <div class="store-boxes">
      <ul class="store-description">
        <li class="store-box"><%= link_to '店舗情報', store_path(@store.id) %></li>
        <li class="store-box"><%= link_to 'クチコミ', store_woms_path(@store.id) %></li>
        <li class="store-box"><%= link_to 'MENU', '#' %></li>
        <li class="store-box"><%= link_to 'MENU', '#' %></li>
      </ul>
    </div>
  </div>
</div>
<div class="wom-link">
  <% if user_signed_in? %>
    <%= link_to 'クチコミを投稿する', new_store_wom_path(@store.id), class: 'btn btn-success' %>
  <% else %>
    <%= link_to 'クチコミを投稿する', new_user_session_path, class: 'btn btn-success' %>
  <% end %>
</div>

<% @store.woms.each do |w| %>
  <div class="wom-area">
    <h1 class="wom-title"><%= w.title %></h1>
    <div class="wom-title"><%= w.content %></div>
    <div class="wom-title"><%= w.visit_date %></div>
    <div class="wom-delete"><%= link_to "削除", store_wom_path(@store, @wom), method: :delete %></div>
  </div>
<% end %>