<%= provide(:title, 'お気に入り店舗一覧') %>
<div class="store-deta"> 
  <div class="store-details">
    <h1 class="store-details-name">お気に入り店舗一覧</h1>
  </div>
  <div class="store-boxes">
    <ul class="store-description">
      <li class="store-box"><%= link_to '店舗情報', store_path(@store.id) %></li>
      <li class="store-box"><%= link_to 'クチコミ', store_woms_path(@store.id) %></li>
      <li class="store-box"><%= link_to '購入予定の古着', '#' %></li>
      <% if user_signed_in? %>
        <li class="store-box"><%= link_to 'お気に入り', user_favorites_path(current_user.id) %></li>
      <% else %>
        <li class="store-box"><%= link_to 'お気に入り', new_user_session_path %></li>
      <% end %>
    </ul>
  </div>
  <div class="favorite-list">
    <% @favorite_stores.each do |favorite| %>
      <div class="favorite-details">
        <p id="favorite-name"><%= link_to favorite.name, store_path(favorite.id), class: "favorite-name" %></p>
        <% favorite.store_images.each do |i| %>
          <span><%= image_tag i.image.to_s, class: "favorite-image" %></span>
        <% end %>
        <span class="store-outline"><%= favorite.outline.truncate(60) %></span>
              <span>代表的なクチコミ</span>
          <% favorite.woms.first(1).each do |wom| %>
            <p class="wom-box">

              <span class="wom-f-content">タイトル：<%= wom.title %></span></br>
              <span class="wom-f-content"><%= wom.content.truncate(60) %></span>
            </p>
          <% end %>
      </div>
    <% end %>
  </div>
</div>